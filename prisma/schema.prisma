generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pledge {
  id            Int      @id @default(autoincrement())
  name          String
  email         String
  goal          String
  deadline      DateTime
  consequence   String
  amount        Float
  partnerName   String
  partnerEmail  String
  public        Boolean  @default(false)
}
